{% extends "_layouts/default.njk"%}

{% block body %}
  <div class="content">
    <strong>Hello, {{user.name }}</strong>
    <p>Schedule with a professional below: </p>

    <ul class="providers">
      {% for provider in providers%}
        <li class="provider">
          <div>
            <img src="/files/{{ provider.avatar }}" />
            <strong>{{ provider.name }}</strong>
          </div>
          <a href="/app/appointments/new/{{provider.id}}">+</a>
        </li>
      {%endfor%}
    </ul>
   {% if (user.provider === true) %}
      <a href="/app/schedule" class="logout">Meus agendamentos</a><br>
    {% endif %}

    <a href="/app/logout" class="logout"/>Sign out
  </div>
{% endblock %}
